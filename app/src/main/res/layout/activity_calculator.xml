<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ejemplo.myapplication8.app.CalculatorActivity"
    android:background="#000000">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtResultado"
        android:background="#ffffff"
        android:textSize="40dp"
        android:layout_alignParentStart="false"
        android:textAlignment="gravity"
        android:gravity="right" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtResultado"
        android:layout_marginTop="5dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="7"
                android:id="@+id/num7"
                android:layout_column="0"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="8"
                android:id="@+id/num8"
                android:layout_column="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="9"
                android:id="@+id/num9"
                android:layout_column="2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="/"
                android:id="@+id/opdiv"
                android:layout_column="3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/operations"
                android:layout_margin="3dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="4"
                android:id="@+id/num4"
                android:layout_column="0"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="5"
                android:id="@+id/num5"
                android:layout_column="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="6"
                android:id="@+id/num6"
                android:layout_column="2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="*"
                android:id="@+id/opmulti"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/operations"
                android:layout_margin="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="1"
                android:id="@+id/num1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="2"
                android:id="@+id/num2"
                android:singleLine="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="3"
                android:id="@+id/num3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="-"
                android:id="@+id/opresta"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/operations"
                android:layout_margin="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow2"
            android:layout_margin="0dp">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="C"
                android:id="@+id/opc"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_margin="3dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:background="@drawable/operations"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="0"
                android:id="@+id/num0"
                android:layout_span="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp"
                android:layout_column="1" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="."
                android:id="@+id/oppunto"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/numbers"
                android:layout_margin="3dp"
                android:layout_column="2" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:text="+"
                android:id="@+id/opsuma"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="@drawable/operations"
                android:layout_margin="3dp"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="="
                android:id="@+id/opigual"
                android:layout_column="0"
                android:layout_span="4"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp"
                android:singleLine="false"
                android:background="@drawable/buttons"
                android:layout_margin="3dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
